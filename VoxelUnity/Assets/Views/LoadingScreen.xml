<LoadingScreen xmlns="MarkLight" StatusText="Loading..." Progress="1">
  <Region Width="100%" Height="100%">
    <Image BackgroundImage="Assets/Resources/Images/LoadingScreen"></Image>
    <Group Alignment="Bottom">
      <Label Text="{StatusText}" FontColor="white" FontSize="30"></Label>
      <Image Style="ProgressBar" Width="75%" Height="50px">
        <Image Style="ProgressBarFiller" FillAmount="{Progress}"></Image>
      </Image>
    </Group>
  </Region>
</LoadingScreen>