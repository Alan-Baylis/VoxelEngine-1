<ToolBelt>
  <Group Alignment="Bottom" Orientation="Vertical" Spacing="5px">
    <List Items="{SecondaryGroup}" Orientation="Horizontal" Alignment="Bottom" CanSelect="true" ItemSelected="SelectedSecondary" Offset="{xOffset}, 0, 0, 0">
      <ListItem IsTemplate="True" Text="{#Item.Name}" Width="100" TextAlignment="Center">
      </ListItem>
    </List>
    <List Items="{MainGroup}" Orientation="Horizontal" Alignment="Bottom" CanSelect="true" ItemSelected="SelectedMain">
      <ListItem IsTemplate="True" Text="{#Item.Name}" Width="100" TextAlignment="Center">
      </ListItem>
    </List>
  </Group>
</ToolBelt>